@model IEnumerable<Review>

<div class="container">
    <div class="row">
        <div class="col pt-2">
            <h3>Reviews</h3>
        </div>
        <div class="col">
            <div class="d-flex justify-content-end pe-1">
                <a class="btn btn-primary rounded-2" asp-controller="Review" asp-action="Create">
                    <img src="images/plus-lg.svg" alt=""/>
                </a>
            </div>
        </div>
    </div>
</div>

@foreach(var obj in Model){
    <div class="container bg-primary rounded-4 ">
        <div class="row p-2 pe-1">
            <div class="col">
                <h5 class="pt-2 text-light">@obj.Title</h5>
            </div>

            <div class="col">
                <div class="d-flex justify-content-end">
                    <div class="p-1">
                        <a class="btn btn-info rounded-2" asp-controller="Review" asp-action="Update" asp-route-id="@obj.Id">
                            <img src="images/pencil-square.svg" alt=""/>
                        </a>
                    </div>
                    <div class="p-1">
                        <a class="btn btn-danger rounded-2" asp-controller="Review" asp-action="Delete" asp-route-id="@obj.Id">
                            <img src="images/trash.svg" alt=""/>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <div class="row bg-primary rounded-4 p-2 pe-1">
            <div class="col-3">
                <img class="w-100" src=@obj.PhotoPath alt="">
            </div>
            <div class="col-7">
                <p class="pt-2 text-light">@obj.ReviewText</p>
            </div>
            <div class="col-2">
                <div class="d-flex justify-content-end">
                    <h5 class="pt-2 text-light">
                        Score:
                        @for(int x = 0; x < @obj.Score; x++){
                            <img src="images/goldstar.png" alt="" style="width:20px"/>
                        }
                        @for(int x = 0; x < (5 - @obj.Score); x++){
                            <img src="images/star.png" alt="" style="width:20px"/>
                        }
                    
                    </h5>
                </div>
            </div>
            <hr/>
        </div>
    </div>
    <br/>
}